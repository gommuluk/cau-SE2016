<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane styleClass="editor-toolbar" stylesheets="@undecoratedRootScene.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditorSceneController">
   <top>
      <AnchorPane>
         <children>
            <ToolBar styleClass="editor-toolbar" stylesheets="@undecoratedRootScene.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <items>
                  <Pane HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="editor-path-label" stylesheets="@undecoratedRootScene.css" text="FilePath" />
                     </children>
                  </Pane>
                  <Button fx:id="btnFileOpen" mnemonicParsing="false" onAction="#onTBBtnLoadClicked" styleClass="btnFileOpen" stylesheets="@undecoratedRootScene.css">
                     <tooltip>
                        <Tooltip text="파일열기" />
                     </tooltip>
                  </Button>
                  <Button fx:id="btnFileSave" mnemonicParsing="false" onAction="#onTBBtnSaveClicked" styleClass="btnFileSave" stylesheets="@undecoratedRootScene.css">
                     <tooltip>
                        <Tooltip text="파일저장" />
                     </tooltip>
                  </Button>
                  <ToggleButton fx:id="btnEdit" mnemonicParsing="false" onAction="#onTBBtnEditClicked" styleClass="btnEdit" stylesheets="@undecoratedRootScene.css" />
               </items>
            </ToolBar>
         </children>
      </AnchorPane>
   </top>
   <center>
      <AnchorPane styleClass="editor" stylesheets="@undecoratedRootScene.css" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="listView" styleClass="list-cell" stylesheets="@undecoratedRootScene.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            </ListView>
            <TextArea fx:id="textArea" editable="false" layoutX="9.1" layoutY="9.1" onKeyPressed="#onTextAreaKeyPressed" styleClass="editor" stylesheets="@undecoratedRootScene.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
